//= depend_on_asset "coupon.png"

#top-picture{
	margin: 10px;
}

#content{
	border: 1px solid #a1a1a1;
	background-color: #ffffff;
	border-radius: 10px;
	margin: 10px;
	padding: 10px; 
}

/* クーポンの画像 */
#coupon{
	width: 70vw;
	height: 42vw;
	background-image: url(<%= asset_path 'coupon.png' %>);
	background-repeat: no-repeat;
	background-size: 70vw auto;
	margin-left: auto;
	margin-right: auto;
}

/* クーポンの中の文章 */
#c_content{
	padding-top: 4vw;
	font-size: 3.3vw;
}

#cmark{
	color: #ffcce6;
}

/* 画像の幅をデバイスの幅に合わせる */
.fw{
	width: 100%;
}

/* 応援する！ボタン */
#like{
	border: 1px solid #a1a1a1;
	border-radius: 5px;
	padding: 5px;
	margin-bottom: 8px;
	background-color: #8acfef;
}

h3.title_color{
	background-color: #a0ace9;
	border-radius: 5px;
	padding: 10px;
	margin: 0px;
}

p.small_font{
	font-size: 15px;
	font-weight: lighter;
}

.title{
	background-color: #d1d1d1;
	border-radius: 5px;
	padding: 10px;
}
